<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="UI version" content="<%= htmlWebpackPlugin.options.version %>">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"/>
    <link href="/img/favicon.ico" rel="shortcut icon" type="image/x-icon">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap" rel="stylesheet">
    <% for (key in htmlWebpackPlugin.files.css) { %>
        <link href="<%= htmlWebpackPlugin.files.css[key] %>" rel="stylesheet"/>
    <% } %>
    <title>Scenario analysis - Blue Yonder</title>
</head>
<body>
<div id="timer_wrapper">
    <h2 id="title_stopwatch" style="text-align: center" >Stopwatch</h2>
    <h4 id="timer_time" style="text-align: center">00:00:00</h4>
    <div id="timer_buttons">
        <button type="button" id="timer_action"  style="width: 195px" >Start</button>
        <button type="button" id="timer_action2" style="width: 195px" >Reset</button>
    </div>
    <h4 id = "lap_list" style="font-size: 24px">Lap list</h4>
    <ul id="timer_loop_wrapper" style="overflow: auto">
    </ul>

</div>
<% for (key in htmlWebpackPlugin.files.js) { %>
    <script src="<%= htmlWebpackPlugin.files.js[key] %>"></script>
<% } %>

<style>
    body {
        min-height: 100vh;
        display: flex;
        background: rgb(111,16,135);
        background: linear-gradient(0deg, rgba(111,16,135,0.6924882629107981) 22%,
        rgba(50,209,255,0.6713615023474178) 100%);
        align-items: center;
        justify-content: center;
    }
    button:focus{
    outline: none;
    }
</style>
</body>
</html>
